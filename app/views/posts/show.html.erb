<p>
  <strong>Usuario:</strong>
  <%= @post.usuario.nome %>
</p>

<p>
  <strong>Conteudo:</strong>
  <%= @post.conteudo %>
</p>

<p>
  <%= render "comentarios/form", comentario: @comentario %>
</p>

<p>Comentarios:</p>

<% @comentarios.each do |comentario| %>
  <p><%= comentario.conteudo %></p>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
