<%= form_for @usuario,
  url: @usuario.persisted? ? :edit_usuario : :new_usuario do |form| %>  <!-- persisted não está no DB logo Atualizar -->


  <% if @usuario.errors.any? && @usuario.errors[:avatar] %>
    <%= form.label "Foto de perfil #{@usuario.errors[:avatar].first}" %>
  <% else %>
    <%= form.label "Foto de perfil" %>
  <% end %>
  <%= form.file_field :avatar %>
  <br>

  <% if @usuario.errors.any? && @usuario.errors[:nome] %>
    <%= form.label "Nome #{@usuario.errors[:nome].first}" %>
  <% else %>
    <%= form.label "Nome" %>
  <% end %>
  <%= form.text_field :nome %>
  <br>


  <% if @usuario.errors.any? && @usuario.errors[:sobrenome] %>
    <%= form.label "Sobrenome #{@usuario.errors[:sobrenome].first}" %>
  <% else %>
    <%= form.label "Sobrenome" %>
  <% end %>
    <%= form.text_field :sobrenome %>
  <br>


  <% if @usuario.errors.any? && @usuario.errors[:email] %>
    <%= form.label "E-mail #{@usuario.errors[:email].first}" %>
  <% else %>
    <%= form.label "E-mail" %>
  <% end %>
    <%= form.email_field :email %>
  <br>


  <% if @usuario.errors.any? && @usuario.errors[:telefone] %>
    <%= form.label "Telefone #{@usuario.errors[:telefone].first}" %>
  <% else %>
    <%= form.label "Telefone" %>
  <% end %>
    <%= form.text_field :telefone %>
  <br>


  <% if @usuario.errors.any? && @usuario.errors[:data_nascimento] %>
    <%= form.label "Data de Nascimento #{@usuario.errors[:data_nascimento].first}" %>
  <% else %>
    <%= form.label "Data de Nascimento" %>
  <% end %>
    <%= form.date_field :data_nascimento %>
  <br>


  <% if @usuario.errors.any? && @usuario.errors[:password] %>
    <%= form.label "Senha #{@usuario.errors[:password].first}" %>
  <% else %>
    <%= form.label "Senha" %>
  <% end %>
    <%= form.password_field :password %>
  <br>

  <% if @usuario.errors.any? && @usuario.errors[:password_confirmation] %>
    <%= form.label "Confirmação de Senha #{@usuario.errors[:password_confirmation].first}" %>
  <% else %>
    <%= form.label "Confirmação de Senha" %>
  <% end %>
    <%= form.password_field :password_confirmation %>
  <br>


  <%= form.label "Estado" %>
    <%= select("", "estado_id", Estado.all.collect {|estado| [ estado.uf,
      estado.id ] }, {include_blank: "Estado"}, id: :estado) %>
    <br>

    <%= form.label "Cidade" %>
    <select name="usuario[cidade_id]" id="cidade" disabled> <!-- select sem  pr vai usar ajax -->
  		<option value=""></option>
  	</select>
    <br>



  <% if @usuario.persisted? %> <!-- persisted não está no DB logo Atualizar -->
    <%= form.submit "Atualizar" %>
  <% else %>
    <%= form.submit "Cadastrar" %>
  <% end %>

<% end %>
