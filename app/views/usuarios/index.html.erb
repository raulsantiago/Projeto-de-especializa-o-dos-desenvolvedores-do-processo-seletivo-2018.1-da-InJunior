<h1>Usuarios</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Sobrenome</th>
    <th>Email</th>
    <th>Telefone</th>
    <th>Data de Nascimento</th>
  <th colspan="2">Ações</th>
  <% @usuarios.each do |usuario| %>
  <tr>
    <td><%= link_to usuario.nome, show_usuario_path(id: usuario.id) %></td>
    <td><%= usuario.sobrenome %></td>
    <td><%= usuario.email %></td>
    <td><%= usuario.telefone %></td>
    <td><%= usuario.data_nascimento %></td>
    <td><%= link_to "Editar", edit_usuario_path(id: usuario.id) %></td>
    <td><%= link_to "Excluir", destroy_usuario_path(id: usuario.id),
    method: :delete %></td>
  </tr>
  <% end %>
</table>
<br>

<%= link_to "Novo Usuário", new_usuario_path %>
